{
  "version": "2",
  "templates": [
    {
      "type": 3,
      "title": "Laravel 12 Complete Stack",
      "description": "Laravel 12 application with MySQL, Redis, and PHPMyAdmin",
      "note": "Deploy a complete Laravel 12 application stack with database and caching",
      "categories": ["CMS", "Web", "PHP"],
      "platform": "linux",
      "logo": "https://raw.githubusercontent.com/laravel/art/master/logo-lockup/5%20SVG/2%20CMYK/1%20Full%20Color/laravel-logolockup-cmyk-red.svg",
      "repository": {
        "url": "https://github.com/YOURUSERNAME/laravel-12-portainer-template",
        "stackfile": "docker-compose.yml"
      },
      "env": [
        {
          "name": "APP_NAME",
          "label": "Application Name",
          "default": "Laravel App",
          "description": "Name of your Laravel application"
        },
        {
          "name": "APP_KEY",
          "label": "Application Key",
          "description": "Laravel application key (generate with: php artisan key:generate --show)"
        },
        {
          "name": "APP_ENV",
          "label": "Application Environment",
          "default": "production",
          "select": [
            {
              "text": "Production",
              "value": "production",
              "default": true
            },
            {
              "text": "Development",
              "value": "local"
            }
          ]
        },
        {
          "name": "APP_DEBUG",
          "label": "Debug Mode",
          "default": "false",
          "select": [
            {
              "text": "Disabled",
              "value": "false",
              "default": true
            },
            {
              "text": "Enabled",
              "value": "true"
            }
          ]
        },
        {
          "name": "APP_URL",
          "label": "Application URL",
          "default": "http://localhost:8080",
          "description": "Full URL where your application will be accessible"
        },
        {
          "name": "APP_PORT",
          "label": "Application Port",
          "default": "8080",
          "description": "Port for the web application"
        },
        {
          "name": "DB_DATABASE",
          "label": "Database Name",
          "default": "laravel",
          "description": "MySQL database name"
        },
        {
          "name": "DB_USERNAME",
          "label": "Database Username",
          "default": "laravel",
          "description": "MySQL username"
        },
        {
          "name": "DB_PASSWORD",
          "label": "Database Password",
          "description": "MySQL user password"
        },
        {
          "name": "DB_ROOT_PASSWORD",
          "label": "Database Root Password",
          "default": "root123",
          "description": "MySQL root password"
        },
        {
          "name": "REDIS_PASSWORD",
          "label": "Redis Password",
          "description": "Redis password (optional)"
        },
        {
          "name": "PHPMYADMIN_PORT",
          "label": "PHPMyAdmin Port",
          "default": "8081",
          "description": "Port for PHPMyAdmin interface"
        },
        {
          "name": "MAIL_MAILER",
          "label": "Mail Driver",
          "default": "smtp",
          "description": "Mail driver (smtp, sendmail, etc.)"
        },
        {
          "name": "MAIL_HOST",
          "label": "Mail Host",
          "description": "SMTP server hostname"
        },
        {
          "name": "MAIL_PORT",
          "label": "Mail Port",
          "default": "587",
          "description": "SMTP server port"
        },
        {
          "name": "MAIL_USERNAME",
          "label": "Mail Username",
          "description": "SMTP username"
        },
        {
          "name": "MAIL_PASSWORD",
          "label": "Mail Password",
          "description": "SMTP password"
        }
      ]
    }
  ]
}
